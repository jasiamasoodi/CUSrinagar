@using CUSrinagar.Models
@using CUSrinagar.Extensions

@model  List<ARGCoursesApplied>

@{
    ViewBag.Title = $"Registration {DateTime.Now.Year} - Apply for more courses";
    List<ARGCoursesApplied> coursesApplied = (List<ARGCoursesApplied>)ViewBag.CoursesApplied;
    bool hasPayment = (bool)ViewBag.HasPayment;
    string totalFee = Convert.ToString(ViewBag.TotalFee);
    ARGFormNoMaster formNoMaster = ViewBag.FormNoMaster;
}

<div class="page-header">
    <h1>
        &nbsp;&nbsp;&nbsp;&nbsp;Registration @DateTime.Now.Year - Apply for more courses
    </h1>
</div>
@if ((bool)ViewBag.PrintProgrammeOption)
{
    <div class="row">
        <div id="response" style="width:85%;margin:0 auto">
            @if (TempData["response"] != null)
            {
                @Html.Raw(TempData["response"])
            }
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-10" style="border:2px solid #cacaca;border-radius:6px;">
            <br />

            @using (Html.BeginForm("AddIHP", "RegnCourses", FormMethod.Post, new { @class = "rnd5", @id = "frmRegnCourses", area = "CUStudentZone" }))
            {
                @Html.Hidden("TotalFee", totalFee)
                @Html.AntiForgeryToken()
                if (hasPayment)
                {
                    @Html.Hidden("HasPayment", "True")
                }
                else
                {
                    @Html.Hidden("HasPayment", "False")
                }

                @Html.Hidden("BasicFee", formNoMaster.BasicFee)
                @Html.Hidden("PerCourse", formNoMaster.PerCourse)
                @Html.Hidden("AdditionalFeeForNonJK", formNoMaster.AdditionalFeeForNonJK)
                @Html.Hidden("FeeForAlreadyInIH", formNoMaster.FeeForAlreadyInIH)
                @Html.Hidden("Distt", (string)ViewBag.IsJkResident)

                <div class="row page-row" style="background-color:white;padding-bottom: 10px" id="CourseSection">
                    <span style="float:right;margin-right:20px;color:black;font-weight:bold;" id="Jsfee"></span>
                    <div class="content-wrapper">
                        <div class="col-sm-12">
                            @{
                                string lbl = string.Empty;
                                string groupName = "";
                                int groupCount = 0;
                                string pref;
                            }
                            <table border="0" style="width:100%">

                                @for (int i = 0; i < Model.Count(); i++)
                                {
                                    if (string.IsNullOrWhiteSpace(Model[i].GroupName))
                                    {
                                        groupName = Model[i].Course_ID.ToString().Trim();
                                    }
                                    else
                                    {
                                        groupName = Model[i].GroupName.Trim();
                                    }

                                    <tr class="col-sm-12 lbl bigger-120 no-padding-right" style="margin-bottom:10px;width:100%" id="@Model[i].Course_ID.ToString().ToLower()">

                                        @Html.HiddenFor(model => model[i].Programme)
                                        @Html.HiddenFor(model => model[i].GroupName, new { @Value = groupName })

                                        @if (hasPayment && (coursesApplied.FirstOrDefault(c => c.Course_ID == Model[i].Course_ID) != null))
                                        {
                                            pref = coursesApplied?.FirstOrDefault(c => c.Course_ID == Model[i].Course_ID)?.Preference?.ToString() ?? "";
                                            <td class="col-sm-12" style="width:100%">
                                                @Html.HiddenFor(model => model[i].Course_ID)
                                                @Html.HiddenFor(model => model[i].CourseName)
                                                @Html.HiddenFor(model => model[i].CourseCode)
                                                @Html.HiddenFor(model => model[i].AlreadyAppliedWithFee, new { Value = "True", data_PrefGroup = $"{groupName}" })

                                                <span style="color:red">Applied</span>

                                                @if (Model[i].CourseName.ToLower().Contains("honor's"))
                                                {
                                                    <text>Honor's </text> @Model[i].CourseName.Replace("Honor's", "")
                                                }
                                                else
                                                {
                                                    @Model[i].CourseName
                                                }
                                                @Html.DropDownListFor(model => model[i].Preference, new SelectList((IEnumerable<SelectListItem>)ViewBag.IHPreferences, "Value", "Text", pref.ToString()), "--Select Preference--", new { @class = Model[i].Course_ID, data_relationclass = $"{groupName}" })

                                                @{
                                                    groupCount++;
                                                }
                                                @if (groupCount == 2)
                                                {
                                                    groupCount = 0;
                                                    <div class="col-sm-12" style="background-color:#e1e1e1;padding:2px;margin-bottom:50px"></div>
                                                }
                                            </td>
                                        }
                                        else
                                        {
                                            pref = coursesApplied?.FirstOrDefault(c => c.Course_ID == Model[i].Course_ID)?.Preference?.ToString() ?? "";
                                            <td class="col-sm-12" style="width:100%">
                                                @{ Model[i].IsClicked = (coursesApplied.FirstOrDefault(c => c.Course_ID == Model[i].Course_ID) != null) ? true : false; }
                                                @Html.HiddenFor(model => model[i].Course_ID)
                                                @Html.HiddenFor(model => model[i].CourseName)
                                                @Html.HiddenFor(model => model[i].CourseCode)
                                                @Html.HiddenFor(model => model[i].AlreadyAppliedWithFee, new { Value = "False" })
                                                @Html.CheckBoxFor(model => model[i].IsClicked, new { @dataid = Model[i].Course_ID, @class = $"JSCourseClk", data_groupname = $"{groupName}" })
                                                <text>&nbsp;</text>
                                                @if (Model[i].CourseName.ToLower().Contains("honor's"))
                                                {
                                                    <text>Honor's </text> @Model[i].CourseName.Replace("Honor's", "")
                                                }
                                                else
                                                {
                                                    @Model[i].CourseName
                                                }

                                                @*------------------ Preference ------------------------------*@

                                                @Html.DropDownListFor(model => model[i].Preference, new SelectList((IEnumerable<SelectListItem>)ViewBag.IHPreferences, "Value", "Text", pref), "--Select Preference--", new { @class = Model[i].Course_ID, data_relationclass = $"{groupName}" })

                                                @{
                                                    groupCount++;
                                                }
                                                @if (groupCount == 2)
                                                {
                                                    groupCount = 0;
                                                    <div class="col-sm-12" style="background-color:#e1e1e1;padding:2px;margin-bottom:50px"></div>
                                                }
                                            </td>
                                        }
                                    </tr>
                                    {
                                        lbl = Model[i].Programme.ToString().ToLower();
                                    }
                                }
                            </table>
                        </div>
                    </div>
                </div>

                <div class="row page-row" style="background-color:white;">
                    <div class="content-wrapper" style="padding:5px;font-size:18px">
                        <fieldset>
                            <legend></legend>
                            <ul>
                                <li>Preferences for already applied or currently applyig course(s) can be changed by or before last date of submission of admission form.</li>
                                <li style="color:#ff6a00;font-weight:bold">If you have already submitted Fee and you are still unable to print your Admission Form visit Cluster University I.T Section.</li>
                            </ul>
                        </fieldset>
                    </div>
                </div>
                <br />
                <p class="text-center JSprogress">
                    @if (!Model.All(x => x.Course_ID == Guid.Parse("FC32E138-4EE2-4DA2-9453-5C8368180BC3")))//int B.Ed-M.Ed
                    {
                        <span id="hideButtons6" style="margin-right:20px;">
                            <button type="submit" id="jsRCFresh" class="btn btn-success"><i class="fa fa-money"></i> Proceed</button>
                        </span>
                    }
                    <span id="hideButtons6">
                        <a id="jsRCReprint" href="@Url.Action("Detail", "Registration", new { id = CUSrinagar.Models.AppUserHelper.User_ID + "/", R = CUSrinagar.Extensions.Helper.EncryptCookieAndURLSafe(((int)CUSrinagar.Models.AppUserHelper.TableSuffix).ToString()), area = string.Empty })" class="btn btn-success"><i class="fa fa-money"></i> Print Regn. Form </a>
                    </span>
                </p>
            }
        </div>
        <div class="col-md-1"></div>

        <div class="col-lg-12"><br /><br /><br /><br /></div>
    </div>
}
else
{
    <h1 class="quadraText">
        Admission process is either closed or will be allowed soon.
    </h1>
}
@section PageSpecificJSFiles{
    <script>
        var basicFee = "@totalFee";
    </script>
    @Scripts.Render("~/bundles/Libraries/jqueryval")
    <script src="@Url.Content("~/Content/ThemeAdmin/Content/Scripts/JSAdmission/AddMoreCourses.js")"></script>
}
