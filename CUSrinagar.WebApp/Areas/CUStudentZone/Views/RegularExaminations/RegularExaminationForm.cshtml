@using Nut
@using CUSrinagar.Extensions

@model CUSrinagar.Models.RegularExaminationViewModel
@{

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Regular Examination Form</title>
</head>
<body class="A4 middle">



    @if (Model != null)
    {

        <form action="@Url.Action("RegularExaminationForm")" method="post">


            @Html.Hidden("ApplyingForSemester", Model.ApplyingForSemester);
            
            
            @if (!string.IsNullOrWhiteSpace((string)ViewBag.Response))
            {
                <div class="page-header alert alert-block alert-danger" style="border:2px solid #cacaca;border-radius:6px;margin:10px">
                    <br>
                    <h1 class="center ">
                        <i class="fa fa-credit-card">
                        </i>
                        @Model.ApplyingForSemester
                    </h1>
                </div>
            }

            <hr />
            <div class="page-header alert alert-block alert-success" style="border:2px solid #cacaca;border-radius:6px;margin:10px">
                <br>
                <h1 class="center ">
                    <i class="fa fa-credit-card">
                    </i>
                    Regular Examination Form for semester = @Model.ApplyingForSemester
                </h1>
            </div>

            <div class="page-header alert alert-block alert-success" style="border:2px solid #cacaca;border-radius:6px;margin:10px">
                <h1 class="center">
                    <i class="fa fa-warning"></i>
                    Last Date For Submission of Forms is @Model.ExaminationSettings.EndDate.ToLongDateString()
                </h1>
            </div>
            <div class="col-sm-12 col-md-12" style="border:2px solid #cacaca;border-radius:6px;margin:10px">
                <table class="table table-hover table-bordered ">
                    <tbody>

                        <tr>
                            <td><strong> Full Name</strong></td>
                            <td><strong> @Model.FullName</strong></td>
                        </tr>

                        <tr>
                            <td><strong> Registration Number</strong></td>
                            <td><strong> @Model.RegistrationNumber</strong></td>
                        </tr>

                        <tr>
                            <td><strong> Current Semester</strong></td>
                            <td><strong> @Model.CurrentSemester</strong></td>
                        </tr>

                        <tr>
                            <td><strong> Applying For Semster</strong></td>
                            <td><strong> @Model.ApplyingForSemester</strong></td>
                        </tr>

                        <tr>
                            <td><strong> Combination Subjects </strong></td>
                            <td>
                                <ol>
                                    @foreach (var subject in @Model.SelectedCombination.Subjects)
                                    {
                                        <li>
                                            <strong>
                                                @subject.SubjectFullName
                                            </strong>
                                        </li>
                                    }
                                </ol>
                            </td>
                        </tr>

                        <tr>
                            <td><strong> Additional Subjects </strong></td>
                            <td>


                                @if (@Model.AdditionalSubjects.IsNotNullOrEmpty())
                                {
                                    <ol>
                                        @foreach (var subject in @Model.AdditionalSubjects)
                                        {
                                            <li>
                                                <strong>
                                                    @subject.Subject.SubjectFullName
                                                </strong>
                                            </li>
                                        }
                                    </ol>
                                }
                                else
                                {
                                    <span><strong>None</strong></span>
                                }


                            </td>
                        </tr>

                        <tr>
                            <td><strong> Email</strong></td>
                            <td>
                                <strong>
                                    <input value="@Model.Email" type="email" id="Email" name="Email" required="required">
                                </strong>
                            </td>
                        </tr>

                        <tr>
                            <td><strong> Phone Number</strong></td>
                            <td>
                                <strong>
                                    <input value="@Model.PhoneNumber" type="text" id="PhoneNumber" name="PhoneNumber" required="required">
                                </strong>
                            </td>
                        </tr>

                        <tr>
                            <td style="background-color:lightgrey;color:darkblue;"><strong>Total Fee Amount </strong></td>
                            <td style="background-color:lightgrey;color:darkmagenta;"><strong>@Model.FeeAmount </strong></td>
                        </tr>

                    </tbody>
                </table>

                <hr />
                <button type="submit" class="btn btn-success" autofocus="">
                    <i class="glyphicon glyphicon-ok"></i><b> Proceed</b>
                </button>
                <hr />
            </div>

            <div class="col-sm-12 col-md-3">

            </div>
        </form>
    }
    else
    {
        <hr />
        <hr />
        <h2 class="center"><i>No Details Found</i></h2>
        <hr />
        <hr />
    }

</body>
</html>