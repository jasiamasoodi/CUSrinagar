<div class="col-sm-2"></div><div class="col-sm-6">
    <h3 class="center">INTERNAL EXAM</h3>
    @if (ViewBag.ErrorMessage != null && ViewBag.ErrorMessage != "")
    {
        <div class="alert alert-danger alert-dismissable"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button><strong class="red">@ViewBag.ErrorMessage</strong></div>
    }
    @using (Html.BeginForm("GetExam", "InternalStudent", FormMethod.Post, new { enctype = "multipart/form-data", @name = "validation-form", @id = "validation-form", @class = "form-horizontal", @role = "form" }))
    {
        <div class="form-group">
            <label>Choose Subject</label><br />
            <div class="jsDDLContainer">
                @Html.DropDownList("Subject", new SelectList(ViewBag.Subjects, "Value", "Text"), "-- All Subject types --",
                       new
                       {
                           @class = "form-control chosen-select jsSubjectDDL jsfilterelement",
                           @data_column = "Subject_Id",
                           @data_operator = "EqualTo",
                           @data_tablealias = "InternalQuestions",
                           @data_scope = "row1"
                       })
            </div>
        </div>
        <div class="form-group center" style="padding-top: 17px;">
            <button type="submit" class="btn btn-primary fa-search-btn"><i class="fa fa-search"></i>&nbsp;View Exam</button>
        </div>
    }
</div>