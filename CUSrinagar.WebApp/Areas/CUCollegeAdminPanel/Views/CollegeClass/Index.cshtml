@model CUSrinagar.Models.AssignClassRollNo
@{
    ViewBag.Title = "Assign Class RollNo - ";
}
<div class="page-wrapper pager-table-text">
    <div class="page-content">

        <div>
            @if (TempData["response"] != null)
            {
                @Html.Raw(TempData["response"])
            }
        </div>
        <div class="row page-row">
            <div class="content-wrapper col-md-10 col-sm-8 jsSingleContent"></div>
            <div class="col-md-12 jsTableContent">
                <div class="panel panel-primary js-pager-table">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Assign Class Roll No.
                        </h3>
                    </div>
                    @using (Html.BeginForm("Index", "CollegeClass", FormMethod.Post, new { @class = "JSAssignCRN form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="panel-body">
                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right">
                                    <span class="red bigger-110">*</span> @Html.LabelFor(model => model.Programme)
                                </label>
                                <div class="col-sm-8">
                                    @Html.DropDownListFor(x => x.Programme, (IEnumerable<SelectListItem>)ViewBag.PrintProgamme, string.Empty, new { })
                                    @Html.ValidationMessageFor(x => x.Programme)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right">
                                    <span class="red bigger-110">*</span> @Html.LabelFor(model => model.StudentFormNoOrRegnNo)
                                </label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(x => x.StudentFormNoOrRegnNo)

                                    @Html.ValidationMessageFor(x => x.StudentFormNoOrRegnNo)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right">
                                    <span class="red bigger-110">*</span> @Html.LabelFor(model => model.ClassRollNo)
                                </label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(x => x.ClassRollNo, new { @maxlength = "11" })
                                    @Html.ValidationMessageFor(x => x.ClassRollNo)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right">
                                    <span class="red bigger-110">*</span> @Html.LabelFor(model => model.Batch)
                                </label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(x => x.Batch, new { @maxlength = "4", Value = DateTime.UtcNow.Year })
                                    @Html.ValidationMessageFor(x => x.Batch)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right">
                                    <span class="red bigger-110">*</span> @Html.LabelFor(model => model.OverrideExistingClassRollNo)
                                </label>
                                <div class="col-sm-8">
                                    @Html.CheckBoxFor(x => x.OverrideExistingClassRollNo)
                                    @Html.ValidationMessageFor(x => x.OverrideExistingClassRollNo)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right">

                                </label>
                                <div class="col-sm-6 ">
                                    <div class="col-sm-1" style="padding-top: 17px;">
                                        <button type="submit" class="btn btn-primary JSUpdateClassRollNo"><i class="fa fa-eye"></i>&nbsp; Assign &amp; Save</button>
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section PageSpecificStyle{
    <style>
        .filter-btn a {
            color: white !important
        }

        .required {
            color: black;
        }

        .field-validation-error {
            color: red !important;
        }

        input[type='text'] {
            width: 300px !important;
        }
    </style>
}
@section PageSpecificJS
{
    <script>
        $(document).ready(function () {
            $(".acr").addClass("active");
            $(".dts").addClass("active open");
        });
    </script>
    @Scripts.Render("~/bundles/Libraries/jqueryval", "~/bundles/Libraries/JQAssignRN")
}