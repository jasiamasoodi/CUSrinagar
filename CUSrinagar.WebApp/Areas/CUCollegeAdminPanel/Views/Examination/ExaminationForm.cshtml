                                 new
                                 {
                                     @class = "form-control",
                                     @data_column = "PrintProgramme jsDDL",
                                     @data_operator = "EqualTo"
                                 })
                        </div>

                        <div class="form-group">
                            <label> Course </label><br />
                            @Html.DropDownList("Courses", new SelectList(ViewBag.Courses, "Value", "Text"), "--All--",
                                       new
                                       {
                                           @class = "form-control jsfilterelement",
                                           @data_column = "Course_ID",
                                           @data_tablealias = "ADMCombinationMaster",
                                           @data_operator = "EqualTo"
                                       })
                        </div>

                        <div class="form-group">
                            <label>Semester</label><br />
                            @Html.DropDownList("Semester", new SelectList(ViewBag.Semesters, "Value", "Text",1), "--All--",
                             new
                             {
                                 @class = "jsfilterelement",
                                 @data_column = "Semester",
                                 @data_operator = "EqualTo",
                                 @data_tablealias= "COMB"
                             })
                        </div>

                        <div class="form-group">
                            <label>Exam Year</label><br />
                            @Html.DropDownList("ExaminationYear", new SelectList(ViewBag.ExaminationYears, "Value", "Text"),"All Students",
                             new
                             {
                                 @class = "jsfilterelement",
                                 @data_column = "Year",
                                 @data_operator = "EqualTo",
                                 @title="Exam Year"
                             })
                        </div>

                        @*<div class="form-group">
                            <label>Form</label><br />
                            <select id="ExamFormStatus" name="ExamFormStatus" class="form-control jsfilterelement" data-column="Status" data-operator="EqualTo" data-tablealias="ExaminationForms">
