@using CUSrinagar.Models

@*@model ARGReprint*@

@{
    ViewBag.Title = $"InternalAwards-{DateTime.UtcNow.Year} ";
    var currentTab = ViewBag.CurrentTab != null ? ViewBag.CurrentTab : "";
    var errorMessagePrint = TempData["error"] != null ? TempData["error"] : "";
    string selectedtab = Convert.ToString(ViewBag.SelectedTab).ToLower();
}




<div class="tabbed-info page-row">
    <ul class="nav nav-tabs">
        <li class='@(string.IsNullOrEmpty(selectedtab)?"active":"")'><a href="#tab1" data-toggle="tab" style="color: black !important;">Instructions</a></li>
        <li><a href="#tab2" data-toggle="tab" style="color: black !important;">Help Document</a></li>
    </ul>
    <div class="tab-content" style="font-size: 13px;">
        <div class="tab-pane @( string.IsNullOrEmpty(selectedtab)?"active":"")" id="tab1" style="font-size:1.1em;">
            <h4 class="font-medium nospace">
                <i class="fa fa-university" aria-hidden="true"></i>
                Steps to create Assistant Professors accounts.
            </h4>

            <hr />
            <p style="font-weight:bold;">
                <i class="fa fa-arrow-rigcht" aria-hidden="true"></i>
                Fields marked with red(*) are mandatory.
                <br /><br />
            </p>
            <ol>
                <li>
                    <i class="fa fa-arrow-rigcht" aria-hidden="true"></i>
                    Assistant Professors are required to have a valid email ID and  valid mobile
                    number which should be working during the whole process.
                </li>
                <li>
                    <i class="fa fa-arrow-rigcht" aria-hidden="true"></i>
                    <span>
                        For Creating New Assistant Professors account click on  Users Link in left Menu on Users List<br />
                    </span>
                </li>
                <li>
                    <i class="fa fa-arrow-rigcht" aria-hidden="true"></i>

                    <span>
                        Click on Add New Button Shown Top of the page on right side of your screen<br />
                    </span>
                </li>
                <li>
                    <i class="fa fa-arrow-rigcht" aria-hidden="true"></i>
                    Fill all the details::
                    <ul>
                        <li>
                            i)UserName: UserName must be at least 6 characters ,only underscore(_) symbol is allowed
                        </li>
                        <li>ii)Password: Password must be atleast 8 characters, one capital letter,one numeric character and one special character</li>
                    </ul>
                </li>
                <li>
                    <i class="fa fa-arrow-rigcht" aria-hidden="true"></i>
                    <b> <u>Assigning Roll No.’s</u></b>
                    <ul>
                        <li>
                            i)To Assign all Roll No.’s to a particular Professor check/click “All Roll-Nos” checkbox.
                        </li>
                        <li>ii)To Assign Range of Roll No.’s to a particular Professor uncheck  “All Roll-Nos” checkbox and enter specific range of Roll No.’s in From and To Box</li>
                    </ul>
                </li>
                <li>
                    <i class="fa fa-arrow-rigcht" aria-hidden="true"></i>

                    <span>
                        Now click on Save button to submit the data, Once the form is successfully submitted, an email will be automatically send to Assistant Professors Email-Id which contains the Username and Password.<br />
                    </span>

                <li>
                    <i class="fa fa-arrow-rigcht" aria-hidden="true"></i>
                    <b> <u> Edit/Modify</u></b>
                    <ul>
                        <li>
                            i)You can modify by selecting the name of the Professor and follow the instructions from step no. 3.
                        </li>
                    </ul>

                </li>
            </ol>
        </div>

        <div class="tab-pane" id="tab2">
            <h4 class="font-medium nospace">
                <i class="fa fa-envelope" aria-hidden="true"></i> <a href="~/FolderManager/Help/Instructions.pdf" download="~/FolderManager/Help/Instructions.pdf">Click here to download help document</a>
            </h4>
            <p style="font-size:20px">
                <iframe src="https://www.cusrinagar.edu.in/FolderManager/Help/Instructions.pdf" style="width: 100%; height: 900px;background-color:white;" type="text/html">
                  Loading Preview...
                </iframe>
            </p>
        </div>
    </div>
</div>
@section PageSpecificStyle{
    <style>
        .tabbed-info li {
            padding: 5px;
        }
    </style>
}



