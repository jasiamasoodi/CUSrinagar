                        <div class="col-sm-8">
                            @Html.DropDownListFor(m => m.MarksFor, new SelectList(ViewBag.MarksForList, "Value", "Text", DefaultMarksForIs), new { @class = "jsfilterelement form-control  required ", @data_column = "MarksFor", @data_operator = "EqualTo" })
                            @Html.ValidationMessageFor(x => x.MarksFor)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right">
                            <span class="red bigger-110">*</span> @Html.Label("Semester")
                        </label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(model => model.Semester, new SelectList(ViewBag.SemesterList, "Value", "Text", subject),
