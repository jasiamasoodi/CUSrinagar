                            @Html.ValidationMessageFor(x => x.Semester)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right">
                            <span class="red bigger-110">*</span> @Html.Label("Subject")
                        </label>
                        <div class="col-sm-8">
                            <div id="Subject">
                                @Html.DropDownListFor(m => m.CombinationSubjects, new SelectList(ViewBag.SubjectsList, "Value", "Text", subject),
                                          "--Select--", new { @class = "form-control jsfilterelement required chosen-select", @data_column = "CombinationSubjects", @data_operator = "Like", })
                            </div>  @Html.ValidationMessageFor(x => x.CombinationSubjects)
                        </div>
                    </div>


                    <div class="col-sm-7 pull-right " style="padding-top: 17px;">
                        <input type="submit" id="FinalSubmit" value="Final Submit" name="Command" class="btn btn-primary col-center-block" title="Final Submit">

                    </div>

                }
            </div>





        </div>
    </div>
</div>


