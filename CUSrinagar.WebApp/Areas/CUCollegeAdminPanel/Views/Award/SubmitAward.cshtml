                            @Html.TextBoxFor(model => model.Batch,(DateTime.Now.Year).ToString(), new { @class = " required form-control jsfilterelement", @data_column = "Batch", @data_operator = "EqualTo" })
                            @Html.ValidationMessageFor(x => x.Batch)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right">
                            <span class="red bigger-110">*</span> @Html.Label("Marks For")
