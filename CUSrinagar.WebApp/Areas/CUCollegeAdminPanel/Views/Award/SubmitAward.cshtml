        </div>
    </div>
    <div class="page-content">
        <div class="row page-row">

            <div class="panel-body">
                @using (Html.BeginForm("SubmitAward", "Award", FormMethod.Post, new { enctype = "multipart/form-data", @name = "validation-form", @id = "submit-form", @class = "form-horizontal", @role = "form" }))
                {
                    <div class="col-sm-12">
                        @Html.ValidationMessage("Error", "", new { @class = "label label-sm label-danger " })

