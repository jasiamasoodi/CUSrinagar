@{
    ViewBag.Title = "CUS::Combinations";
}
@section CUSSitemap{
    <div class="col-md-5">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="@Url.Action("Index","Dashboard",new { area="CUSrinagarAdminPanel"})">Home</a>
            </li>
            <li class="active">Combination List</li>
        </ul><!-- /.breadcrumb -->
    </div>
    <div class="col-md-7">
        @*<h2 class="no-margins">
                Result Reports
            </h2>*@
    </div>
    <div class="col-md-4">
    </div>
}

<div class="row">
    <div class="col-md-12 jsTableContent">
        <div class="panel panel-primary js-pager-table" data-otherparam1="@CUSrinagar.Enums.PrintProgramme.UG">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Combination
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        List of Combination
                    </small>
                    <span class="clickable filter-btn pull-right" data-toggle="tooltip" title="Toggle table filter" data-container="body">
                        <a href="#"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;Search</a>
                    </span>
                </h3>
            </div>
            <div class="panel-body">
                <div class="search-box">
                    <form class="form-inline">
                        <div class="form-group hidden">
                            <label>Choose College</label><br />
                            <div class="jsDDLContainer">
                                @Html.DropDownList("CollegeDDL", new SelectList(ViewBag.College, "Value", "Text",CUSrinagar.Models.AppUserHelper.College_ID), "------ All Colleges ------",
                               new
                               {
                                   @class = "chosen-select jsfilterelement jsCollegeDDL",
                                   @data_column = "College_ID",
                                   @data_operator = "EqualTo",
                                   @data_scope="row1"
                               })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Choose Course</label><br />
                            <div class="jsDDLContainer  wd-200">
                                @Html.DropDownList("CourseDDL", new SelectList(ViewBag.Courses, "Value", "Text"), " -- All Courses --",
                                           new
                                           {
                                               @class = "form-control chosen-select jsCourseDDL jsfilterelement",
                                               @data_column = "Course_ID",
                                               @data_operator = "EqualTo",
                                               @data_tablealias = "ADMCombinationMaster",
                                               @data_defaulttextvalue = " -- All Courses --,",
                                               @data_scope="row1"
                                           })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Choose Semester</label><br />
                            <div class="jsDDLContainer">
                                @Html.DropDownList("SemesterDDL", new SelectList(ViewBag.Semesters, "Value", "Text"), "All Semester",
                                           new
                                           {
                                               @class = "form-control chosen-select jsSemesterDDL jsfilterelement",
                                               @data_column = "Semester",
                                               @data_operator = "EqualTo",
                                               @data_defaulttextvalue = "All Semesters,",
                                               @data_scope="row1"
                                           })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Choose Status</label><br />
                            <div class="jsDDLContainer wd-200">
                                <select required id="StatusDDL" class="jsfilterelement chosen-select form-control jsStatusDDL" data-column="Status" data-operator="EqualTo" data-defaulttextvalue="All," data-scope="row1" data-tablealias="ADMCombinationMaster">
                                    <option value="" selected> - All - </option>
                                    <option value="1">Active</option>
                                    <option value="0">In-Active</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Enter Combination Code</label><br />
                            <input type="text" placeholder="Combination Code" class="form-control jsfilterelement" data-column="CombinationCode" data-operator="Contains" data-scope="row1" />
                        </div>
                        <div class="form-group">
                            <label class="invisible">for styling purpose</label><br />
                            <button type="button" class="btn btn-primary btn-sm fa-search-btn js-search"><i class="fa fa-search"></i>&nbsp;Search</button>
                            <div class="btn-group">
                                <button data-toggle="dropdown" class="btn btn-primary btn-sm dropdown-toggle" type="button">
                                    Action
                                    <span class="ace-icon fa fa-caret-down icon-on-right"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-default dropdown-info">
                                    <li>
                                        <a href="javascript:void(0)" class="js-exportToCSV" data-url="@Url.Action("CombinationCSV","Combination",new { area="CUCollegeAdminPanel"})" data-otherparam1="printProgramme=@CUSrinagar.Enums.PrintProgramme.UG">
                                            Download Excel(CSV)
                                        </a>
                                    </li>
                                    <li>
                                        <a id="JSMakeActive" href="javascript:void(0)">Make Active</a>
                                    </li>
                                    <li>
                                        <a id="JSMakeInActive" href="javascript:void(0)">Make In-Active</a>
                                    </li>
                                    <li>
                                        <a id="jsShowBatchReplaceSubjectDDL" href="#">Replace Subject</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="js-table-content" data-url=@Url.Action("CombinationListPartial") data-DefaultOrderByColumn="CombinationCode">
            </div>
            @{Html.RenderPartial("_JSPagerTableFooter");}
        </div>
    </div>
</div>

@*MODAL DIALOG START*@
<div class="modal" id="jsShowReplaceSubjectDDLDailog" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered wd-650">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Batch Update next semester and its combonation</h4>
            </div>
            <div class="modal-body padding-0-10">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td class="wd-35">
                                <input type="hidden" value="" data-column="Programme" data-operator="EqualTo" data-scope="batch-next-sem-row1" class="jsProgrammeDDL" />
                                <input type="hidden" value="" data-column="Course_ID" data-operator="EqualTo" data-scope="batch-next-sem-row1" class="jsCourseDDL" />
                                <input type="hidden" value="@CUSrinagar.Models.AppUserHelper.College_ID" data-column="College_ID" class="jsCollegeDDL" data-operator="EqualTo" data-scope="batch-next-sem-row1" />

                                <input class="ace checkbox checkbox-inline jsBatchChkBox" type="checkbox"><span class="lbl"></span>
                            </td>
                            <td class="wd-200">
                                Semester
                            </td>
                            <td>
                                <div id="" class="">
                                    <div class="wd-400 jsDDLContainer">
                                        @Html.DropDownList("BatchNextSemester", new SelectList(ViewBag.Semesters, "Value", "Text"), "-- choose semester --",
                                       new { @class = "jsfilterelement chosen-select  jsSemesterDDL", @data_column = "Semester", @data_operator = "EqualTo", @data_defaulttextvalue = "-- choose semester --,", @data_tablealias = "COMB", @data_scope = "batch-next-sem-row1" })
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="wd-35">
                                <input class="ace checkbox checkbox-inline jsBatchChkBox" type="checkbox"><span class="lbl"></span>
                            </td>
                            <td class="wd-200">
                                Assign Combination
                            </td>
                            <td>
                                <div id="CombinationContainer" class="">
                                    <div class="wd-400 jsDDLContainer">
                                        <select class="jsfilterelement chosen-select jsCombinationDDL" data-scope="batch-next-sem-row1" data-defaulttextvalue="-- choose combination --,">
                                            <option value="">-- choose combination --</option>
                                        </select>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="jsBatchUpdateNextSemCombDailogBtn">Update</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@*MODAL DIALOG END*@



