@{
    ViewBag.Title = "CUS::Result";
}

@section CUSSitemap{
    <div class="col-md-5">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="@Url.Action("Index", "Dashboard", new { area = "CUCollegeAdminPanel" })">Home</a>
            </li>
            <li class="active">Result List</li>
        </ul><!-- /.breadcrumb -->
    </div>
    <div class="col-md-7">
        @*<h2 class="no-margins">
                Result Reports
            </h2>*@
    </div>
    <div class="col-md-4">
    </div>
}

<div class="row">
    <div class="col-md-12 jsTableContent">
        <div class="panel panel-primary js-pager-table" data-otherparam1="@CUSrinagar.Enums.PrintProgramme.UG">
            <div class="panel-heading hidden-print">
                <h3 class="panel-title">
                    Result
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        List of Student
                    </small>
                    <span class="clickable filter-btn pull-right" data-toggle="tooltip" title="Toggle table filter" data-container="body">
                        <a href="#"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;Search</a>
                    </span>
                </h3>
            </div>
            <div class="panel-body hidden-print">
                <div class="search-box">
                    <form class="form-inline">
                        <input type="hidden" value="@CUSrinagar.Models.AppUserHelper.College_ID" class="jsfilterelement jsCollegeDDL" data-scope="row1" data-column="AcceptCollege_ID" />
                        <div class="form-group">
                            <label>Batch</label><br />
                            <div class="jsDDLContainer">
                                <select class="jsfilterelement form-control" data-column="Batch" data-tablealias="S" data-operator="EqualTo" id="BatchDDL">
                                    @for (int y = DateTime.Now.Year; y > 2016; y--)
                                    {
                                        <option value="@y">@y</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Programme</label><br />
                            <div class="wd-140 jsDDLContainer">
                                @Html.DropDownList("ProgrammeDDL", new SelectList(ViewBag.Programmes, "Value", "Text", (short)CUSrinagar.Enums.Programme.UG), " select programme",
                                    new
                                    {
                                        @class = "form-control chosen-select jsProgrammeDDL jsfilterelement required",
                                        @data_column = "Programme",
                                        @data_operator = "EqualTo",
                                        @data_tablealias = "course",
                                        @data_scope = "row1"
                                    })
                            </div>
                        </div>
                        <div class="form-group courseddl" style="display:none !important;">
                            <label>Choose Course</label><br />
                            <div class="jsDDLContainer  wd-200">
                                @{List<SelectListItem> ddlCourses = ViewBag.Courses;}
                                @Html.DropDownList("Course", new SelectList(ddlCourses, "Value", "Text", ddlCourses.First().Value),
                                new
                                {
                                    @class = "form-control chosen-select ",
                                    @data_column = "Course_ID",
                                    @data_operator = "EqualTo",
                                    @data_scope = "row1",
                                    @data_tablealias = "Course"
                                })
                            </div>
                        </div>

                        <div class="form-group departmentddl">
                            <label>Choose Department</label><br />
                            <div class="jsDDLContainer wd-200">
                                @{List<SelectListItem> ddldeparment = ViewBag.Departments;}
                                @Html.DropDownList("Department_ID", new SelectList(ddldeparment, "Value", "Text", ddldeparment.First().Value),
                                       new
                                       {
                                           @class = "form-control chosen-select jsDepartmentDDL jsfilterelement",
                                           @data_column = "Department_ID",
                                           @data_operator = "EqualTo",
                                           @data_scope = "row1",
                                       })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Choose Semester</label><br />
                            <div class="jsDDLContainer">
                                @Html.DropDownList("Semester", new SelectList(ViewBag.Semesters, "Value", "Text"), "-- All --",
                                                                   new
                                                                   {
                                                                       @class = "form-control chosen-select jsSemesterDDL jsfilterelement",
                                                                       @data_column = "Semester",
                                                                       @data_operator = "EqualTo",
                                                                       @data_scope = "row1",
                                                                       @data_tablealias = "Comb"
                                                                   })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Choose Subjects</label><br />
                            <div class="jsDDLContainer wd-200">
                                <select required id="SubjectDDL" class="jsfilterelement chosen-select form-control jsVWSCSubjectDDL" data-column="CombinationSubjects" data-operator="Contains" data-defaulttextvalue="All Subjects," data-scope="row1">
                                    <option value="" selected>All Subjects</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Statistics type</label><br />
                            <div class="jsDDLContainer wd-200">
                                <select class="jsfilterelement chosen-select form-control" data-column="ShowSubjectWiseStatistics" data-scope="row1">
                                    <option value="CourseWise" selected>Show Course Wise</option>
                                    <option value="SubjectWise">Show Course Subject Wise</option>
                                    <option value="ChoosenSubjectWise">Show By Choosen Subject Wise</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group" style="margin:0 10px 0 10px;">
                            Date From (Optional) <br />
                            @Html.TextBox("GreaterThanDate", "", new { @data_tablealias = "RN", @data_column = "Dated", @data_operator = "GreaterThanEqualTo", @class = "form-control jsfilterelement datetime", @type = "date" })
                        </div>
                        <div class="form-group"  style="margin:0 10px 0 10px;">
                            Date To (Optional)<br />
                            @Html.TextBox("LessThanDate", "", new { @data_tablealias = "RN", @data_column = "Dated", @data_operator = "LessThanEqualTo", @class = "form-control jsfilterelement datetime", @type = "date" })
                        </div>


                        <div class="form-group">
                            <label>Regst No</label><br />
                            <input type="text" placeholder="Regist Number" name="SearchRegNo" class="form-control jsfilterelement" data-column="CUSRegistrationNo" data-operator="EqualTo" data-scope="row1" />
                        </div>
                        <div class="form-group">
                            <label class="invisible">for styling purpose</label><br />
                            <button type="button" class="btn btn-primary btn-sm fa-search-btn js-search"><i class="fa fa-search"></i>&nbsp;Search</button>
                            <div class="btn-group">
                                <button data-toggle="dropdown" class="btn btn-primary btn-sm dropdown-toggle" type="button">
                                    Action
                                    <span class="ace-icon fa fa-caret-down icon-on-right"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-default dropdown-info">
                                    <li>
                                        <a href="javascript:void(0)" class="js-exportToCSV" data-url="@Url.Action("PrintGazette","Result",new { area="CUCollegeAdminPanel"})" data-otherparam1="printProgramme=@CUSrinagar.Enums.PrintProgramme.UG" data-otherparam2="printStatistics=true">
                                            Print Gazette (Choosen Semester Only)
                                        </a>
                                    </li>
                                    @if (CUSrinagar.Models.AppUserHelper.College_ID == new Guid("9D03A374-4398-4A48-BE2A-FD9911EC6F82"))
                                    {
                                        <li>
                                            <a href="javascript:void(0)" class="js-exportToCSV" data-url="@Url.Action("PrintFullGazette","Result",new { area="CUCollegeAdminPanel"})" data-otherparam1="printProgramme=@CUSrinagar.Enums.PrintProgramme.UG" data-otherparam2="printStatistics=true">
                                                Print Gazette (Upto Choosen Semester)
                                            </a>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="js-table-content" data-url=@Url.Action("StatisticsListPartial") data-DefaultOrderByColumn="ExamRollNumber">
            </div>
        </div>
    </div>
</div>


@section PageSpecificJS{
    <script type="text/javascript">
        $(document).ready(function () {
            $(".js-table-content").on("mouseover", function () {
                var titleNew = $('body').find("#displayFileName").val();
                $('title').empty().text(titleNew);
            });
            $('#BatchDDL').change(function () {
                var batchSelected = $(this).val();
                var programmeUG = $("#ProgrammeDDL").val();
                if (Number(batchSelected) >= 2022 && programmeUG == "1") {
                    $(".departmentddl").removeAttr('style')
                    $(".departmentddl select").addClass("jsDepartmentDDL").addClass("jsfilterelement");
                    $(".courseddl").css('display', 'none')
                    $(".courseddl select").removeClass("jsCourseDDL").removeClass("jsfilterelement");;
                } else {
                    $(".courseddl").removeAttr('style')
                    $(".courseddl select").addClass("jsCourseDDL").addClass("jsfilterelement");
                    $(".departmentddl").css('display', 'none')
                    $(".departmentddl select").removeClass("jsDepartmentDDL").removeClass("jsfilterelement");;
                }
            });
        });
    </script>
}
