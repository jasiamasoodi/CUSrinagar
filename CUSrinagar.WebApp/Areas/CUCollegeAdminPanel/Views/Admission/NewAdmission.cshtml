@{
    ViewBag.Title = "New Admission";
    Layout = "~/Areas/CUCollegeAdminPanel/Views/Shared/_CUCollegeAdminPanelLayout.cshtml";
}
@section CUSSitemap{
    <div class="col-md-5">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="@Url.Action("Index","Dashboard",new { area="CUCollegeAdminPanel"})">Home</a>
            </li>
            <li class="active">New Admission Course Wise</li>
        </ul>
    </div>
}
<div class="row">
    <div class="col-md-12 jsTableContent">
        <div class="panel panel-primary js-pager-table" data-otherparam1="@CUSrinagar.Enums.PrintProgramme.UG">
            <div class="panel-heading">
                <h3 class="panel-title">
                    New Admission
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        List of Student
                    </small>
                    <span class="clickable filter-btn pull-right" data-toggle="tooltip" title="Toggle table filter" data-container="body">
                        <a href="#"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;Search</a>
                    </span>
                </h3>
            </div>
            <div class="panel-body">
                <div class="search-box">
                    <form class="form-inline">
                        <input type="hidden" data-tablealias="CP" data-column="College_ID" data-operator="EqualTo" class="jsfilterelement" value="@CUSrinagar.Models.AppUserHelper.College_ID" />
                        <input type="hidden" data-tablealias="CP" data-column="IsActive" data-operator="EqualTo" class="jsfilterelement" value="1" />
                        <div class="form-group">
                            <label>Batch</label><br />
                            <div class="jsDDLContainer">
                                <select class="form-control jsfilterelement" data-column="Batch" data-operator="EqualTo" data-scope="row1">
                                    <option value="2020" selected="selected">2020</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Course</label><br />
                            <div class="jsDDLContainer">
                                @Html.DropDownList("Course", new SelectList(ViewBag.Courses, "Value", "Text"), "-- Choose course --",
                               new { @class = "chosen-select form-control jsfilterelement",
                                   @data_column = "Course_ID", @data_operator = "EqualTo",
                                   @data_defaulttextvalue = "--Select--,", @data_tablealias = "CP", @data_scope = "row1" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Form Number/Name</label><br />
                            <input type="text" placeholder="Form Number/Name" class="form-control jsfilterelement" data-column="StudentFormNo,FullName" data-operator="Contains" data-scope="row1" />
                        </div>
                        <div class="form-group">
                            <label class="invisible">for styling purpose</label><br />
                            <button type="button" class="btn btn-primary btn-sm fa-search-btn js-search"><i class="fa fa-search"></i>&nbsp;Search</button>
                            <div class="btn-group">
                                <button data-toggle="dropdown" class="btn btn-primary btn-sm dropdown-toggle">
                                    Action
                                    <span class="ace-icon fa fa-caret-down icon-on-right"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-default dropdown-info">
                                    <li class="divider"></li>
                                    <li><a href="javascript:void(0)" data-url="@Url.Action("NewAdmissionCSV", "Admission", new { area = "CUCollegeAdminPanel" })" id="" class="js-exportToCSV" data-otherparam1="printProgramme=@CUSrinagar.Enums.PrintProgramme.UG" style="width:100%">Download Excel</a></li>
                                    <li class="divider"></li>
                                </ul>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="js-table-content" data-url='@Url.Action("NewAdmissionListPartial","Admission",new { area = "CUCollegeAdminPanel"})' data-DefaultOrderByColumn="Student_ID" data-otherparam1="printProgramme=@CUSrinagar.Enums.PrintProgramme.UG">
            </div>
            @{Html.RenderPartial("_JSPagerTableFooter");}
        </div>
    </div>
</div>

@section PageSpecificJS{

    <script type="text/javascript">
        $(document).ready(function () {
            loadpagertableWithDefaultParams();

            $(document).on("click", '.jsimport', function () {
                var _cusformno = $(".Form_RegistrationNumber").val();
                var msg = '<h4>Are you sure you want to add current student?</h4><hr/>';
                msg += '<h5 class=" text-success">Are you sure you want assign combination to current student</h5>';
                showConfirmationDialog(msg);
                $('#confirmationDialog').off('click.confirmation', 'button').on('click.confirmation', 'button', function () {
                    var $btn = $(this);
                    hideConfirmationDialog();
                    if ($btn.data('response') == 'yes') {
                        showLoader();
                        var _url = getBaseUrlCollege() + "AssignCombination/ImportFromIHtoUG";
                        $.ajax({
                            url: _url,
                            type: "POST",
                            datatype: "Json",
                            async: true,
                            data: { cusformno: _cusformno },
                            success: function (responseData) {
                                if (responseData.IsSuccess) {
                                    window.open(`/CUCollegeAdminPanel/AssignCombination/ViewFormDetail?Form_RegistrationNumber=${_cusformno}&printProg=1&sem=1`, '_blank');
                                } else {
                                    showErrorMessage(responseData.message);
                                }
                            },
                            error: function (xhr, error, msg) {
                                showErrorMessage(msg);
                            },
                            complete: function () {
                                hideLoader();
                            }
                        });
                    }
                });
            });


        });
    </script>

}
