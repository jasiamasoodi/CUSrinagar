@model CUSrinagar.Models.SemesterAdmissionFilter
@{
    ViewBag.Title = "Download Semester Adm Details - ";
    string parsedDate = (DateTime.Now.Year + "-" + ((DateTime.Now.Month.ToString().Length == 1 ? "0" + (DateTime.Now.Month - 1).ToString(): (DateTime.Now.Month - 1).ToString())) + "-01").Trim();
}
<div class="page-wrapper pager-table-text">
    <div class="page-content">

        <div>
            @if (TempData["response"] != null)
            {
                @Html.Raw(TempData["response"])
            }
        </div>
        <div class="row page-row">
            <div class="content-wrapper col-md-10 col-sm-8 jsSingleContent"></div>
            <div class="col-md-12 jsTableContent">
                <div class="panel panel-primary js-pager-table">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Download 3<sup>rd</sup> Semester &amp; onwards Admission Details
                        </h3>
                    </div>
                    @using (Html.BeginForm("DownloadSemesterAdmissionDetails", "RR", FormMethod.Post, new { @class = "JSsemAdmDetails form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="panel-body">
                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right">
                                    <span class="red bigger-110">*</span> @Html.LabelFor(model => model.SearchInPrintProgramme)
                                </label>
                                <div class="col-sm-8">
                                    @Html.DropDownListFor(x => x.SearchInPrintProgramme, (IEnumerable<SelectListItem>)ViewBag.PrintProgamme, string.Empty, new { })
                                    @Html.ValidationMessageFor(x => x.SearchInPrintProgramme)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right">
                                    <span class="red bigger-110">*</span> @Html.LabelFor(model => model.Semester)
                                </label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(x => x.Semester, new { @type = "number", min = "1", max = "12" })

                                    @Html.ValidationMessageFor(x => x.Semester)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right">
                                    <span class="red bigger-110">*</span> @Html.LabelFor(model => model.Dated)
                                </label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(x => x.Dated, new { @type = "date",@class="dd" })
                                    @Html.ValidationMessageFor(x => x.Dated)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right">

                                </label>
                                <div class="col-sm-6 ">
                                    <div class="col-sm-1" style="padding-top: 17px;">
                                        <button type="submit" class="btn btn-primary JSdownloadExcel"><i class="fa fa-eye"></i>&nbsp; Download As Excel</button>
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section PageSpecificStyle{
    <style>
        .filter-btn a {
            color: white !important
        }

        .required {
            color: black;
        }

        .field-validation-error {
            color: red !important;
        }

        input[type='text'] {
            width: 300px !important;
        }
    </style>
}
@section PageSpecificJS
{
    <script>
        $(document).ready(function () {
            $(".dd").val('@parsedDate');
        });
    </script>
    @Scripts.Render("~/bundles/Libraries/jqueryval")
}