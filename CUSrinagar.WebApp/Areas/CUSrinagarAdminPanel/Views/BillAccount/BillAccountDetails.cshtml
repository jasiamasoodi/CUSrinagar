@model  CUSrinagar.Models.BIL_BankAccountDetails
@{
    ViewBag.Title = "CUS :: Add BankAccount";

}
@section CUSSitemap{
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.Action("Index","Dashboard",new { area= "CUSrinagarAdminPanel" })">Home</a>
        </li>
    </ul>
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="">Add Bank Account Details</h4>
        <hr class="no-margin-top" />
        @if (TempData["Err"] != null)
        {
            @Html.Raw(TempData["Err"])
        }
        @using (Html.BeginForm("BillAccountDetails", "BillAccount", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-sm-6">
                <div class="form-group">
                    <div class="col-sm-9">
                        @Html.LabelFor(model => model.BankName)<span class="red">*</span>
                        <span style="color:red !important;">@Html.ValidationMessageFor(model => model.BankName)</span>
                        @Html.TextBoxFor(model => model.BankName, new { @class = "form-control", required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-9">
                        @Html.LabelFor(model => model.Branch)<span class="red">*</span>
                        <span style="color:red !important;">@Html.ValidationMessageFor(model => model.Branch)</span>
                        @Html.TextBoxFor(model => model.Branch, new { @class = "form-control", required = "required" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-9">
                        @Html.LabelFor(model => model.AccountNo)<span class="red">*</span>
                        <span style="color:red !important;">@Html.ValidationMessageFor(model => model.AccountNo)</span>
                        @Html.TextBoxFor(model => model.AccountNo, new { @class = "form-control", @type = "number", required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-9">
                        @Html.LabelFor(model => model.IFSCode)<span class="red">*</span>
                        <span style="color:red !important;">@Html.ValidationMessageFor(model => model.IFSCode)</span>
                        @Html.TextBoxFor(model => model.IFSCode, new { @class = "form-control", required = "required" })
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="col-sm-11">
                        <div class=" pull-text-right pull-right">
                            <button type="submit" name="SaveAsNew" id="btnsubmit" value="submit" class="btn btn-primary pull-right">Save</button>
                        </div>
                        <div class=" pull-text-right pull-right">
                            <a href="@Url.Action("BillAccountDetails")" class="btn btn-danger ">Cancel</a>
                            &nbsp; &nbsp;
                        </div>
                    </div>
                </div>

            </div>



        }
    </div>
</div>


@section PageSpecificJS{
    @Scripts.Render("~/bundles/Libraries/jqueryval")
}
@section PageSpecificStyle
{
    <style type="text/css">

        table tbody tr td, table tbody tr th {
            vertical-align: inherit !important;
        }
    </style>
}
