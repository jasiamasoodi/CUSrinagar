<div class="row">
    <div class="col-md-12 jsTableContent">
        <div class="panel panel-primary js-pager-table" data-otherparam1="@CUSrinagar.Enums.PrintProgramme.UG">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Combination
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        List of Combination
                    </small>
                    <span class="clickable filter-btn pull-right" data-toggle="tooltip" title="Toggle table filter" data-container="body">
                        <a href="#"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;Search</a>
                    </span>
                </h3>
            </div>
            <div class="panel-body">
                <div class="search-box">
                    <form class="form-inline">
                        <div class="form-group">
                            <label>Choose College</label><br />
                            <div class="jsDDLContainer wd-200">
                                @Html.DropDownList("CollegeDDL", new SelectList(ViewBag.College, "Value", "Text"), "------ All Colleges ------",
                               new
                               {
                                   @class = "chosen-select jsfilterelement jsCollegeDDL",
                                   @data_column = "College_ID",
                                   @data_operator = "EqualTo",
                                   @data_scope = "row1"
                               })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Choose Course</label><br />
                            <div class="jsDDLContainer wd-200">
                                @Html.DropDownList("CourseDDL", new SelectList(ViewBag.Courses, "Value", "Text"), " -- All Courses --",
                                           new
                                           {
                                               @class = "form-control chosen-select jsfilterelement",
                                               @data_column = "Course_ID",
                                               @data_operator = "EqualTo",
                                               @data_tablealias = "ADMCombinationMaster",
                                               @data_defaulttextvalue = " -- All Courses --,",
                                               @data_scope = "row1"
                                           })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Choose Semester</label><br />
                            <div class="jsDDLContainer">
                                @Html.DropDownList("SemesterDDL", new SelectList(ViewBag.Semesters, "Value", "Text"), "All Semester",
                                           new
                                           {
                                               @class = "form-control chosen-select jsfilterelement jsSemesterDDL",
                                               @data_column = "Semester",
                                               @data_operator = "EqualTo",
                                               @data_defaulttextvalue = "All Semesters,",
                                               @data_scope = "row1"
                                           })

                            </div>
                        </div>
                        <div class="form-group">
                            <label>Choose Subjects</label><br />
                            <div class="jsDDLContainer wd-250">
                                <select required id="SubjectDDL" class="jsfilterelement chosen-select form-control jsVWSCSubjectDDL" data-column="CombinationSubjects" data-operator="Contains" data-defaulttextvalue="All Subjects," data-scope="row1">
                                    <option value="" selected>All Subjects</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Choose Status</label><br />
                            <div class="jsDDLContainer wd-200">
                                <select required id="StatusDDL" class="jsfilterelement chosen-select form-control jsStatusDDL" data-column="Status" data-operator="EqualTo" data-defaulttextvalue="All," data-scope="row1" data-tablealias="ADMCombinationMaster">
                                    <option value="" selected> - All - </option>
                                    <option value="1">Active</option>
                                    <option value="0">In-Active</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Enter Combination Code</label><br />
                            <input type="text" placeholder="Combination Code" class="form-control jsfilterelement" data-column="CombinationCode" data-operator="Contains" data-scope="row1" />
                        </div>
                        <div class="form-group">
                            <label class="invisible">for styling purpose</label><br />
                            <button type="button" class="btn btn-primary btn-sm fa-search-btn js-search"><i class="fa fa-search"></i>&nbsp;Search</button>
                            <div class="btn-group">
                                <button data-toggle="dropdown" class="btn btn-primary btn-sm dropdown-toggle" type="button">
                                    Action
                                    <span class="ace-icon fa fa-caret-down icon-on-right"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-default dropdown-info">
                                    <li>
                                        <a href="javascript:void(0)" class="js-exportToCSV" data-url="@Url.Action("CombinationCSV","Combination",new { area="CUSrinagarAdminPanel"})" data-otherparam1="printProgramme=@CUSrinagar.Enums.PrintProgramme.UG">
                                            Download Excel(CSV)
                                        </a>
                                    </li>
                                    @if (!HttpContext.Current.User.IsInRole(CUSrinagar.Enums.AppRoles.University_Dean.ToString()))
                                    {
                                        <li>
                                            <a href="javascript:void(0)" class="js-exportToCSV" data-url="@Url.Action("UsedCombinationCSV","Combination",new { area="CUSrinagarAdminPanel"})" data-otherparam1="printProgramme=@CUSrinagar.Enums.PrintProgramme.UG">
                                                Used Combinations(CSV)
                                            </a>
                                        </li>
                                        <li>
                                            <a id="JSMakeActive" href="javascript:void(0)">Make Active</a>
                                        </li>
                                        <li>
                                            <a id="JSMakeInActive" href="javascript:void(0)">Make In-Active</a>
                                        </li>
                                        <li class="divider"></li>
                                        <li>
                                            <a href='@Url.Action("ReplaceSubject","Combination",new { area = "CUSrinagarAdminPanel"})'>
                                                Replace Subject
                                            </a>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="js-table-content" data-url=@Url.Action("CombinationListPartial") data-DefaultOrderByColumn="CombinationCode">
            </div>
            @{Html.RenderPartial("_JSPagerTableFooter");}
        </div>
    </div>
</div>

@*MODAL DIALOG START*@
