                            <td class="wd-200">
                                Replace Subject In Result
                            </td>
                            <td>
                                <div class="checkbox">
                                    <label class="block">
                                        <input type="checkbox" class="ace input-lg" checked="checked" id="ReplaceSubjectInResult" name="ReplaceSubjectInResult">
                                        <span class="lbl bigger"> Update</span>
                                        <input type="hidden" value="True">
                                    </label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="wd-35">
                                <input class="ace checkbox checkbox-inline jsBatchChkBox" type="checkbox"><span class="lbl"></span>
                            </td>
                            <td class="wd-200">
                                Replace Subject In Syllabus
                            </td>
                            <td>
                                <div class="checkbox">
                                    <label class="block">
                                        <input type="checkbox" class="ace input-lg" checked="checked" id="ReplaceSubjectInSyllabus" name="ReplaceSubjectInSyllabus">
                                        <span class="lbl bigger"> Update</span>
                                        <input type="hidden" value="True">
                                    </label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="wd-35">
                                <input class="ace checkbox checkbox-inline jsBatchChkBox" type="checkbox"><span class="lbl"></span>
                            </td>
                            <td class="wd-200">
                                Replace Subject In Transcript
                            </td>
                            <td>
                                <div class="checkbox">
                                    <label class="block">
                                        <input type="checkbox" class="ace input-lg" checked="checked" id="ReplaceSubjectInTranscript" name="ReplaceSubjectInTranscript">
                                        <span class="lbl bigger"> Update</span>
                                        <input type="hidden" value="True">
                                    </label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="wd-35">
                                <input class="ace checkbox checkbox-inline jsBatchChkBox" type="checkbox"><span class="lbl"></span>
                            </td>
                            <td class="wd-200">
                                Remove Finded Subject
                            </td>
                            <td>
                                <div class="checkbox">
                                    <label class="block">
                                        <input type="checkbox" class="ace input-lg" checked="checked" id="RemoveFindedSubject" name="RemoveFindedSubject">
                                        <span class="lbl bigger"> Update</span>
                                        <input type="hidden" value="True">
                                    </label>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="jsBatchUpdateCombinationSubjectBtn">Update</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
