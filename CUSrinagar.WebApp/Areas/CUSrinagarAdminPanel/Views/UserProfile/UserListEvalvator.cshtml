@{
    ViewBag.Title = "EvalvatorList";
}

<div class="page-wrapper pager-table-text">
    <div class="page-header">
        <div style="padding-bottom: 30px;">
            <div class="col-sm-12">               
                <div class="col-sm-6">
                    <h1 class="heading-title pull-left">
                        External Awards 
                        <small>
                            <i class="ace-icon fa fa-angle-double-right"></i>
                            List of Evalvators                     
                        </small>
                    </h1>
                </div>
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6 align-right">
                    @Html.ActionLink("Add New", "CreateEvalvator", "UserProfile", new { area = "CUSrinagarAdminPanel", @class = "btn btn-sm btn-primary white" })
                </div>
            </div>
        </div>
    </div>
    <div class="page-content">
        <div class="row page-row">
            <div class="content-wrapper col-md-10 col-sm-8 jsSingleContent"></div>
            <div class="col-md-12 jsTableContent">
                <div class="panel panel-primary js-pager-table">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            External Awards
                            <span class="clickable filter-btn pull-right" data-toggle="tooltip" title="Toggle table filter" data-container="body">
                                <a href="#"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;Search</a>
                            </span>

                        </h3>
                    </div>
                    <div class="panel-body">

                        <div class="col-sm-12 search-box">
                            <label class="col-sm-12">Advance Search</label>

                            <div class="col-sm-5 lbl bigger-120 no-padding-right">
                                User Name
                                <div id="Course">
                                    @Html.TextBox("UserName", "", new { @class = "form-control jsfilterelement", @data_column = "UserName", @data_operator = "Contains" })
                                </div>
                            </div>

                            <div class="col-sm-3 lbl bigger-120 no-padding-right">
                                Full Name
                                <div>
                                    @Html.TextBox("FullName", "", new { @class = " form-control jsfilterelement", @data_column = "FullName", @data_operator = "Contains" })
                                </div>
                            </div>

                            <div class="col-sm-1 " style="padding-top: 17px;">
                                <button type="button" class="btn btn-primary fa-search-btn"><i class="fa fa-search"></i>&nbsp;Search</button>
                            </div>
                        </div>

                    </div>

                    <div class="js-table-content" data-url="@Url.Action("UserListTableEvalvator", "UserProfile", new { area = "CUSrinagarAdminPanel" })" data-DefaultOrderByColumn="CreatedOn">

                    </div>
                    @{Html.RenderPartial("_JSPagerTableFooter");}
                </div>
            </div>
        </div>
    </div>
</div>
@section PageSpecificJS{
    <script src="~/Content/ThemeAdmin/Content/Scripts/JSUsers/UserList.js"></script>
    <script>
        var _ChangeStatus = "@Url.Action("ChangeStatus", "UserProfile", new { area = "CUSrinagarAdminPanel" })";
        $(document).ready(function () {
            var $pagertable = $(".js-pager-table");
            loadpagertable();
        });
    </script>

    <script>
        var controllerName = "UserProfile";
        var chilDDLPath = '@Url.Action("_GetChildDDL", "UserProfile", new { area = "CUSrinagarAdminPanel" })';
        var ChangeStatusPath = '@Url.Action("ChangeStatus", "UserProfile", new { area = "CUSrinagarAdminPanel" })';
         var DeletePath = '@Url.Action("Delete", "UserProfile", new { area = "CUSrinagarAdminPanel" })';
        @*var _Session = '@currentYear';*@
        var isPublic = false;
    </script>

    <script src="@Url.Content("~/Scripts/JSSyllabus/SyllabusIndex.js")"></script>
    <script src="@Url.Content("~/Scripts/JSChosen.js")"></script>


}
