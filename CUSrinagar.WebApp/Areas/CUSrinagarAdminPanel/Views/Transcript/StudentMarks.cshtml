}

@section CUSSitemap{
    <div class="col-md-5">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="@Url.Action("Index","Dashboard",new { area="CUSrinagarAdminPanel"})">Home</a>
            </li>
            <li class="active">MarksCard</li>
        </ul><!-- /.breadcrumb -->
    </div>
    <div class="col-md-7"></div>
    <div class="col-md-4"></div>
}
<div class="row">
    @if (TempData["response"] != null)
    {
        @Html.Raw(TempData["response"])
    }
    <div class="col-md-12 jsTableContent">
        <div class="panel panel-primary js-pager-table" data-otherparam1="@CUSrinagar.Enums.PrintProgramme.UG">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Student Marks
                    <i class="ace-icon fa fa-angle-double-right"></i>
                    List of Student

                    <span class="clickable filter-btn pull-right" data-toggle="tooltip" title="Toggle table filter" data-container="body">
                        <a href="#"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;Search</a>
                    </span>
                </h3>
            </div>
            <div class="panel-body">
                <div class="search-box">
                    <div class="form-inline">

                        <div class="col-sm-12">
                            <div class="form-group">
                                <span style="color:red">*</span>Semester Batch<span id="BatchValidator" class="label label-sm label-danger arrowed-in-right arrowed"></span>
                                <br />
                                @Html.TextBox("SemesterBatch", "2017", new { @class = "form-control jsfilterelement required ", @data_column = "SemesterBatch", @data_operator = "EqualTo", })
                            </div>
                            <div class="form-group">
                                <label>Programme</label><br />
                                <div class="jsDDLContainer">
                                    @Html.DropDownList("PrintProgramme", new SelectList(ViewBag.PrintProgrammes, "Value", "Text", 1), "None", new { @class = "chosen-select required jsfilterelement form-control jsPrintProgrammeDDL", @data_column = "PrintProgramme", @data_operator = "EqualTo", @data_tablealias = "", @data_scope = "row1" })
                                </div>
                            </div>
                            <div class="form-group">
                                <span style="color:red">*</span> Course<span id="CourseValidator" class="label label-sm label-danger arrowed-in-right arrowed"></span><br />
                                <div class="jsDDLContainer wd-230">
                                    @Html.DropDownList("Course", new SelectList(ViewBag.Courses, "Value", "Text"), "--Select--", new
                                    {
                                        @class = "chosen-select form-control jsfilterelement jsCourseDDL required",
                                        @data_column = "Course_ID",
                                        @data_operator = "EqualTo",
                                        @data_defaulttextvalue = "--Select--,",
                                        @data_scope = "row1",
                                        @data_tablealias = "Detail"
                                    })
                                </div>
                            </div>
                            <div class="form-group">
                                Registartion No
                                <div class="jsDDLContainer">
                                    @Html.TextBox("CUSRegistrationNo", "", new { @class = "form-control jsfilterelement ", @data_column = "CUSRegistrationNo", @data_operator = "EqualTo" })
                                </div>
                            </div>
                            <div class="form-group margin-left-20">
                                <div>
                                    Allow Extra Credits
                                    @Html.CheckBox("AllowExtraCredits", new { @Value = "FALSE", @class = "form-control jsfilterelement ", @data_column = "AllowExtraCredits", @data_operator = "EqualTo" })
                                </div>
                            </div>
                            <div class="form-group margin-left-20">
                                <div>
                                    Course Break
                                    @Html.CheckBox("HaveGap", new { @Value = "FALSE", @class = "form-control jsfilterelement ", @data_column = "HaveGap", @data_operator = "EqualTo" })
                                </div>
                            </div>

                            <div class="form-group margin-left-20">
                                <div>
                                    Is Lateral Entry
                                    @Html.CheckBox("IsLateralEntry", new { @Value = "FALSE", @class = "form-control jsfilterelement ", @data_column = "IsLateralEntry", @data_operator = "EqualTo" })
                                </div>
                            </div>
                            <div class="form-group margin-left-20">
                                <div>
                                    Is Division Improvement
                                    @Html.CheckBox("IsDivisionImprovement", new { @Value = "FALSE", @class = "form-control jsfilterelement ", @data_column = "IsDivisionImprovement", @data_operator = "EqualTo" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 center">
                            <div class="form-group">
                                <div style="padding-top:20px !important;">
                                    <button type="button" class="btn btn-sm btn-primary fa-search-btn js-search"><i class="fa fa-search"></i>&nbsp;Search/Generate</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="js-table-content tbl" data-url="/CUSrinagarAdminPanel/Transcript/GetStudentMarks" data-DefaultOrderByColumn="FULLNAME"></div>
            @{Html.RenderPartial("_JSPagerTableFooter");}
        </div>
    </div>
</div>
    </div>

@section PageSpecificJSFiles
{
    <script type="text/javascript">
        //$(document).ready(function () {
        //    $('#HaveGap').val('FALSE
        //    $(".date-picker").datepicker({
        //        format: 'yyyy-mm-dd'
        //    });
        //});
        $('#HaveGap').change(function () {
            if ($(this).val() == 'FALSE') {
                $(this).val('TRUE');
            } else { $(this).val('FALSE'); }
        });
        $('#AllowExtraCredits').change(function () {
            if ($(this).val() == 'FALSE') {
                $(this).val('TRUE');
            } else { $(this).val('FALSE'); }
        });
        $('#IsLateralEntry').change(function () {
            if ($(this).val() == 'FALSE') {
                $(this).val('TRUE');
            } else { $(this).val('FALSE'); }
        });
        $('#IsDivisionImprovement').change(function () {
            if ($(this).val() == 'FALSE') {
                $(this).val('TRUE');
            } else { $(this).val('FALSE'); }
        });
    </script>
}


















