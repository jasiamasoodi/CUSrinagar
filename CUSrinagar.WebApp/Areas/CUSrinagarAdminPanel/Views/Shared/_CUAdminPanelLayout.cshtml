<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>@(ViewBag.Title == null ? "CUSrinagar Admin Panel" : ViewBag.Title)</title>

    <meta name="description" content="overview &amp; stats" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

    @{Html.RenderPartial("~/Areas/CUSrinagarAdminPanel/Views/Shared/_CUWebAppFavicon.cshtml");}

    @*@{Html.RenderPartial("~/Areas/CUSrinagarAdminPanel/Views/Shared/_CUWebAppGeneralCSS.cshtml");}*@
    @Styles.Render("~/Content/ThemeAdmin/Content/Libraries/css/gencssadmin")
    <link rel="stylesheet" href="@Url.Content("~/Content/ThemeAdmin/Content/Libraries/font-awesome/4.7.0/css/font-awesome.min.css")" />


    @*basic scripts*@
    @*@{Html.RenderPartial("~/Areas/CUSrinagarAdminPanel/Views/Shared/_CUWebAppGeneralJS.cshtml");}*@
    @Scripts.Render("~/Content/ThemeAdmin/Content/Scripts/Libraries/jsgenmainadmin")

    @*page specific plugin styles files *@
    @RenderSection("PageSpecificStyleFiles", required: false)

    @*inline styles related to this page*@
    @RenderSection("PageSpecificStyle", required: false)

    <style>
        .js-table-content {
            overflow: auto !important;
        }
    </style>
</head>

<body class="no-skin">
    @Html.Hidden("ErrorMessage", (string)ViewBag.ErrorMessage)
    @Html.Hidden("SuccessMessage", (string)ViewBag.SuccessMessage)
    @Html.Hidden("adminbaseurl", Url.Action("action", "controller", new { area = "CUSrinagarAdminPanel" }))
    @Html.Hidden("UserRoles", CUSrinagar.Models.AppUserHelper.AppUsercompact.UserRoles == null ? null : Newtonsoft.Json.JsonConvert.SerializeObject(CUSrinagar.Models.AppUserHelper.AppUsercompact.UserRoles))
    <div id="navbar" class="navbar navbar-default ace-save-state navbar-fixed-top">
        <div class="navbar-container ace-save-state" id="navbar-container">
            <button type="button" class="navbar-toggle menu-toggler pull-left" id="menu-toggler" data-target="#sidebar">
                <span class="sr-only">Toggle sidebar</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="navbar-header pull-left">
                <a href="/" class="navbar-brand">
                    <small>
                        Cluster University Srinagar
                    </small>
                </a>
            </div>

            <div class="navbar-buttons navbar-header pull-right" role="navigation">
                @{Html.RenderPartial("_CUAdminPanelUserAccountMenu");}
            </div>
        </div> @*navbar-container*@
    </div>

    <div class="main-container ace-save-state" id="main-container">
        <script type="text/javascript">
            try { ace.settings.loadState('main-container') } catch (e) { }
        </script>

        <div id="sidebar" class="sidebar responsive ace-save-state sidebar-fixed sidebar-scroll" data-sidebar="true" data-sidebar-scroll="true" data-sidebar-hover="true">
            <script type="text/javascript">
                try { ace.settings.loadState('sidebar') } catch (e) { }
            </script>
            @*sidebar-shortcuts*@
            <div class="sidebar-shortcuts " id="sidebar-shortcuts" style="padding: 8px; background-color: #e6f3e8">
                <div class="sidebar-shortcuts-large" id="sidebar-shortcuts-large">
                    <a href="/CUSrinagarAdminPanel/Dashboard/Index" style="color:black;text-decoration:none;" title="dashboard">
                        <img src="/Content/ThemePublic/PrintImages/CUSLogo.png" style="width:40px;">
                        <strong>University Portal</strong>
                    </a>
                </div>
                <div class="sidebar-shortcuts-mini" id="sidebar-shortcuts-mini">
                    <a href="/CUSrinagarAdminPanel/Dashboard/Index" style="color:black;text-decoration:none;" title="dashboard">
                        <img src="/Content/ThemePublic/PrintImages/CUSLogo.png" style="width:40px;">
                        <strong>University Portal</strong>
                    </a>
                </div>
            </div>
            @*nav-list*@
            @{Html.RenderPartial("_CUAdminPanelLeftMenu");}

            <div class="sidebar-toggle sidebar-collapse" id="sidebar-collapse">
                <i id="sidebar-toggle-icon" class="ace-icon fa fa-angle-double-left ace-save-state" data-icon1="ace-icon fa fa-angle-double-left" data-icon2="ace-icon fa fa-angle-double-right"></i>
            </div>
        </div>

        <div class="main-content">
            <div class="main-content-inner">
                <div class="breadcrumbs ace-save-state breadcrumbs-fixed hidden-print" id="breadcrumbs">
                    @*Site map*@
                    @RenderSection("CUSSitemap", required: false)

                    @*nav-search*@
                    @{Html.RenderPartial("_CUAdminPanelSearch");}
                </div>

                <div class="page-content">
                    @*Panel-settings-container*@
                    @{Html.RenderPartial("~/Areas/CUSrinagarAdminPanel/Views/Shared/_CUWebAppThemeSettings.cshtml");}

                    @*<div class="row">
                        <div class="col-xs-12">*@
                    @*PAGE CONTENT BEGINS*@
                    @RenderBody()
                    @*PAGE CONTENT ENDS*@
                    @*</div>
                        </div>*@
                </div> @*page-content*@
            </div>
        </div> @*main-content*@
        @{Html.RenderPartial("~/Areas/CUSrinagarAdminPanel/Views/Shared/_CUWebAppFooter.cshtml");}


        <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
            <i class="ace-icon fa fa-angle-double-up icon-only bigger-110"></i>
        </a>
    </div> @*main-container*@

    @Scripts.Render("~/Content/ThemeAdmin/Content/Scripts/Libraries/jsgensubadmin")
    @Scripts.Render("~/Scripts/General/jscustomsubadmin")
    @Scripts.Render("~/bundles/Libraries/jqueryvalidation")
    @*page specific plugin scripts*@
    @RenderSection("PageSpecificJSFiles", required: false)

    @*inline scripts related to this page*@
    @RenderSection("PageSpecificJS", required: false)

</body>
</html>
