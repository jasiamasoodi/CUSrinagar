@* Panel User Account Menu *@


<ul class="nav ace-nav">
    <li class="light-blue dropdown-modal">
        <a data-toggle="dropdown" href="#" class="dropdown-toggle">
            <span class="">
                @* user-info *@
                <i class="ace-icon fa fa-user"></i>&nbsp;&nbsp;
                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                {
                    string userName = HttpContext.Current.User.Identity.Name;
                    if (userName.Length > 20)
                    {
                        <span title="@userName">@userName.Substring(0, 20)..</span>
                    }
                    else
                    {
                        @userName
                    }

                    if ((CUSrinagar.Models.AuthCookie.MaxResetPasswordMonths * 30) < (DateTime.Now - CUSrinagar.Models.AppUserHelper.AppUsercompact.LastPasswordResetDate).TotalDays)
                    {
                        Response.Redirect("/Account/ResetUserPassword", true);
                    }
                }
            </span>

            <i class="ace-icon fa fa-caret-down"></i>
        </a>

        <ul class="user-menu dropdown-menu-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
            <li>
                <a href="/" target="_blank">
                    <i class="ace-icon fa fa-globe"></i>
                    <span class="menu-text">
                        Goto Main Site
                    </span>
                </a>
            </li>
            <li>
                <a href="/Account/ResetUserPassword?tg=cp">
                    <i class="ace-icon fa fa-cog"></i>
                    Change Password
                </a>
            </li>

            <li>
                <a href="#">
                    <i class="ace-icon fa fa-user"></i>
                    Profile
                </a>
            </li>

            <li class="divider"></li>

            <li>
                <a href="/Account/SignOut/">
                    <i class="ace-icon fa fa-power-off"></i>
                    Logout
                </a>
            </li>
        </ul>
    </li>
</ul>
