@model  List<CUSrinagar.Models.InternalQuestions>
@{
    Layout = null;
}

<table class="table table-hover table-bordered js-table">
    <thead style="white-space: nowrap;">
        <tr>
            <th data-property="Question">Question</th>
            @for (int i = 1; i <= 4; i++)
            {
                <th>Option @i</th>}

            <th></th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null)
        {
            foreach (var row in Model)
            {
                <tr>
                    <td>
                        @row.Question
                    </td>
                    @foreach (var option in row.InternalQuestionOptions ?? new List<CUSrinagar.Models.InternalQuestionOptions>())
                    {
                        <td>@option.OptionName</td>}
                    <td>
                        @{ var pathis = "/CUSrinagarAdminPanel/InternalAdmin/EditQuestion?Question_Id=" + row.Question_Id;}
                        <a href=@pathis target="_blank">Edit Question</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>



