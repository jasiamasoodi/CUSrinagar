                    <div class="form-group">
                        <div class="checkbox">
                            <label class="block">
                                <input type="checkbox" name="IsActive" class="ace input-lg" Checked="checked" />
                                <span class="lbl bigger"></span>
                                @Html.Hidden("model[" + TopIndex + "].IsActive")
                            </label>
                        </div>
                    </div>
                </td>
                <td>
                    <button type="button" class="btn btn-success btn-sm js-save-row"> Save </button>
                    <button type="button" class="btn btn-primary btn-sm hidden">Cancel</button>

                </td>
            </tr>
            @if (Model != null)
            {
                int i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @(i++)
