                    <div class="col-sm-12 wd-650  jsDDLContainer">
                        @Html.DropDownList("model[" + TopIndex + "].DependentSubject_ID", new SelectList(ViewBag.CurrentSemSubject ?? new List<SelectListItem>(), "Value", "Text"),
