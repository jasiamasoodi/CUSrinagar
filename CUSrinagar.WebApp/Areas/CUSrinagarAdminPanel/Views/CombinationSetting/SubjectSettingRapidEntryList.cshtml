                            @Html.Hidden("model[" + TopIndex + "].BaseSubjectFullName", item.BaseSubjectFullName)
                            @Html.Hidden("model[" + TopIndex + "].BaseSubject_ID", item.BaseSubject_ID)
                            @Html.Hidden("model[" + TopIndex + "].Batch", item.Batch)
                            @Html.Hidden("model[" + TopIndex + "].CourseFullName", item.CourseFullName)
                            @Html.Hidden("model[" + TopIndex + "].Course_ID", item.Course_ID)
                            @Html.Hidden("model[" + TopIndex + "].Dated", item.Dated)
                            @Html.Hidden("model[" + TopIndex + "].BaseSemester", item.BaseSemester)
