    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>S.No.</th>
                <th>Course</th>
                <th>Sem</th>
                <th>Subject Full Name</th>
                <th>IsActive</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr id="jsNewRow">
                <td>
                    0
                    @Html.Hidden("model[" + TopIndex + "].BaseSemester", mainItem.BaseSemester)
