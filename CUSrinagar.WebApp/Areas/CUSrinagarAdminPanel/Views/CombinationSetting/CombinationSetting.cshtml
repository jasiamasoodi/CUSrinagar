                <a href="@Url.Action("Index","Dashboard",new { area="CUSrinagarAdminPanel"})">Home</a>
            </li>
            <li class="active">Combination Setting</li>
        </ul><!-- /.breadcrumb -->
    </div>
    @*<div class="col-md-7">
            <h2 class="no-margins">
