@{
    /**/

    ViewBag.Title = "CUS :: Syllabus";
    string currentYear = DateTime.Now.Year + "";
}
@section CUSSitemap{
    <div class="col-md-5">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="@Url.Action("Index","Dashboard",new { area="CUSrinagarAdminPanel"})">Home</a>
            </li>
            <li class="active">Syllabus</li>
        </ul><!-- /.breadcrumb -->
    </div>
    <div class="col-md-7">
        @*<h2 class="no-margins">
                Result Reports
            </h2>*@
    </div>
    <div class="col-md-4">
    </div>
}

<div class="row">
    <div class="col-md-12 jsTableContent">
        <div class="panel panel-primary js-pager-table" data-otherparam1="@CUSrinagar.Enums.PrintProgramme.UG">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Syllabus
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        List of Syllabus
                    </small>
                    <span class="clickable filter-btn pull-right" data-toggle="tooltip" title="Toggle table filter" data-container="body">
                        <a href="#"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;Search</a>
                    </span>
                </h3>
            </div>
            <div class="panel-body">
                <div class="search-box">
                    <form class="form-inline">
                        <div class="form-group">
                            <label>Programme</label><br />
                            <div class="wd-140 jsDDLContainer">
                                @Html.DropDownList("ProgrammeDDL", new SelectList(ViewBag.Programmes, "Value", "Text"), "-- All --",
                                           new
                                           {
                                               @class = "form-control chosen-select jsProgrammeDDL jsfilterelement",
                                               @data_column = "Programme",
                                               @data_defaulttextvalue = " -- All --,",
                                               @data_tablealias="c",
                                               @data_scope = "row1"
                                           })
                            </div>
                        </div>
                        @*<div class="form-group">
                            <label>Choose Course</label><br />
                            <div class="jsDDLContainer  wd-200">
                                @Html.DropDownList("Course", new SelectList(ViewBag.Courses, "Value", "Text", (short)CUSrinagar.Enums.Programme.UG), " -- All Courses --",
                                           new
                                           {
                                               @class = "form-control chosen-select jsCourseDDL jsfilterelement",
                                               @data_column = "Course_ID",
                                               @data_tablealias = "c",
                                               @data_defaulttextvalue = " -- All Courses --,",
                                               @data_scope = "row1",
                                           })
                            </div>
                        </div>*@
                        <div class="form-group">
                            <label>Choose Semester</label><br />
                            <div class="jsDDLContainer">
                                @Html.DropDownList("Semester", new SelectList(ViewBag.Semesters, "Value", "Text"), "-- All --",
                                                                   new
                                                                   {
                                                                       @class = "form-control chosen-select jsSemesterDDL jsfilterelement",
                                                                       @data_column = "Semester",
                                                                       @data_tablealias= "Syllabus",
                                                                       @data_defaulttextvalue = " -- All --,",
                                                                       @data_scope = "row1",
                                                                   })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Subject Title</label><br />
                            <input type="text" placeholder="Subject Title" class="form-control jsfilterelement" data-column="DepartmentFullName,SubjectFullName,Remark" data-operator="Contains" data-scope="row1" />
                        </div>
                        <div class="form-group">
                            <label class="invisible">for styling purpose</label><br />
                            <button type="button" class="btn btn-primary btn-sm fa-search-btn js-search"><i class="fa fa-search"></i>&nbsp;Search</button>
                            <div class="btn-group">
                                <button data-toggle="dropdown" class="btn btn-primary btn-sm dropdown-toggle" type="button">
                                    Action
                                    <span class="ace-icon fa fa-caret-down icon-on-right"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-default dropdown-info">
                                    <li>
                                        <a href="javascript:void(0)" class="js-exportToCSV" data-url="@Url.Action("CSV")" data-otherparam1="printProgramme=@CUSrinagar.Enums.PrintProgramme.UG">
                                            Download Excel(CSV)
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="form-group pull-right">
                            <label class="invisible">for styling purpose</label><br>
                            <a title="Add New Syllabus" class="btn btn-sm btn-primary" target="_blank" href="@Url.Action("Create", "Syllabus", new{area="CUSrinagarAdminPanel"})">
                                <i class="ace-icon fa fa-plus  bigger-110"></i>&nbsp;Add New
                            </a>
                        </div>

                    </form>
                </div>
            </div>
            <div class="js-table-content" data-url=@Url.Action("SyllabusListPartial") data-DefaultOrderByColumn="Subject_ID">
            </div>
            @{Html.RenderPartial("_JSPagerTableFooter");}
        </div>
    </div>
</div>



@section PageSpecificJS{
    <script>
        var controllerName = "Syllabus";
        var chilDDLPath = '@Url.Action("_GetChildDDL", "Syllabus", new { area = "CUSrinagarAdminPanel" })';
        var ChangeStatusPath = '@Url.Action("ChangeStatus", "Syllabus", new { area = "CUSrinagarAdminPanel" })';
         var DeletePath = '@Url.Action("Delete", "Syllabus", new { area = "CUSrinagarAdminPanel" })';
        var _Session = '@currentYear';
        var isPublic = false;

    </script>
    <script src="@Url.Content("~/Scripts/JSSyllabus/SyllabusIndex.js")"></script>
    <script src="@Url.Content("~/Scripts/JSChosen.js")"></script>
}
