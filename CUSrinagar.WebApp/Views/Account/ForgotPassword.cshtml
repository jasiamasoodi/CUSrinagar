@model CUSrinagar.Models.AppLogin

@{
    ViewBag.Title = "Forgot Password";
}

<div class="page-header">
    <h1>
        Forgot Password
    </h1>
</div>
<div id="response">
    @if (TempData["response"] != null)
    {
        @Html.Raw(TempData["response"])
    }
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6" style="border:2px solid #cacaca;border-radius:6px;">
        <br />
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { id = "frmForgotPassword" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="col-lg-3"></div>
                <div class="form-group name col-lg-8">
                    @Html.LabelFor(model => model.UserName)
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @style = "color:red;" })
                    <div class="form-group input-group">
                        <span class="input-group-addon btn-theme">
                            <i class="ace-icon fa fa-user"></i>
                        </span>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", maxlength = "35" })
                    </div>
                </div>

                <div class="col-lg-10"></div>
                <div class="col-lg-3"></div>
                <div class="form-group col-lg-8">
                    <div class="col-md-offset-2">
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="submit" id="JSForgot" value="Send Mail" class="btn btn-theme" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-3"></div>
</div>

@section PageSpecificJS
{
    @Scripts.Render("~/bundles/Libraries/jqueryval", "~/bundles/JQAccount")
}