@model CUSrinagar.Models.AppLogin

@{
    ViewBag.Title = "SignIn";
}

<div class="page-header">
    <h1>
        <i class="fa fa-university"></i> Employee - SignIn
    </h1>
</div>
<div class="row">
    <div id="response">
        @if (TempData["response"] != null)
        {
            @Html.Raw(TempData["response"])
        }
    </div>
    <div class="col-md-3"></div>
    <div class="col-md-6" style="border:2px solid #cacaca;border-radius:6px;">
        <br />
        @using (Html.BeginForm("SignIn", "Account", FormMethod.Post, new { @id = "frmSignIn", @autocomplete = "off" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="col-lg-3"></div>
                <div class="form-group name col-lg-8">
                    @Html.LabelFor(model => model.UserName)
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @style = "color:red;" })
                    <div class="form-group input-group">
                        <span class="input-group-addon btn-theme">
                            <i class="ace-icon fa fa-user"></i>
                        </span>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", maxlength = "35", @autocomplete = "off" })
                    </div>
                </div>
                <div class="col-lg-10"></div>
                <div class="col-lg-3"></div>
                <div class="form-group name col-lg-8">
                    @Html.LabelFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password, "", new { @style = "color:red;" })
                    <div class="form-group input-group">
                        <span class="input-group-addon btn-theme">
                            <i class="ace-icon fa fa-lock"></i>
                        </span>
                        @Html.Hidden("ReturnUrl", (string)ViewBag.ReturnUrl)
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", maxlength = "35", @autocomplete = "off" })
                    </div>
                </div>

                <div class="col-lg-10"></div>
                <div class="col-lg-3"></div>
                <div class="form-group col-lg-8">
                    <div class="form-group input-group">
                        @Html.CheckBoxFor(model => model.RememberMe, new { @class = "" })
                        &nbsp;
                        @Html.LabelFor(model => model.RememberMe)
                    </div>
                </div>

                <div class="col-lg-10"></div>
                <div class="col-lg-3"></div>
                <div class="form-group col-lg-8">
                    <div class="col-md-offset-2">
                        <strong> @Html.ActionLink("I forgot my password", "ForgotPassword", new { area = string.Empty })</strong>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="submit" id="JSSignIn" value="SignIn" class="btn btn-theme" />
                    </div>
                </div>
            </div>

        }
    </div>
    <div class="col-md-3"></div>

    <div class="col-lg-12"><br /><br /><br /><br /></div>
</div>

@section PageSpecificJS
{
    @Scripts.Render("~/bundles/Libraries/jqueryval", "~/bundles/JQAccount")
}