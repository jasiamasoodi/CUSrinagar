@{ var routeValues = HttpContext.Current.Request.RequestContext.RouteData.Values;
    string controllerName = "";
    if (routeValues != null)
    {
        if (routeValues.ContainsKey("controller"))
        {
            controllerName = routeValues["controller"].ToString();
        }
    } }
<!DOCTYPE html>
<html lang="en" xmlns:og="http://opengraphprotocol.org/schema/" xmlns:fb="http://www.facebook.com/2008/fbml" >
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title Cluster University Srinagar</title>
    <noscript><meta http-equiv="REFRESH" content="0; url=@Url.Content("~/Content/JSdisabled.html")" /></noscript>

    <meta property="og:image" content="http://www.cusrinagar.edu.in/Content/ThemePublic/Libraries/images/logo-green-t3.jpg?w=200&h=200&auto=compress&cs=tinysrg" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="200" />
    <meta property="og:image:height" content="200" />
    <meta property="og:title" content="@ViewBag.Title" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://www.cusrinagar.edu.in" />
    <meta property="og:site_name" content="http://www.cusrinagar.edu.in" />
    <meta property="og:description" content="Official website" />
    <meta property="fb:app_id" content="397464297877630" />
    <meta name="author" content="IT Section" />

    <meta name="description" content="overview &amp; stats" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <link rel="icon" href="@Url.Content("~/favicon.ico")" type="image/ico">
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" type="image/ico">
    @Styles.Render("~/Content/ThemePublic/Libraries/gencss")
    <link href="@Url.Content("~/Content/ThemePublic/Libraries/plugins/flexslider/flexslider.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/ThemePublic/Libraries/plugins/font-awesome/4.7.0/css/font-awesome.min.css")" rel="stylesheet" />
    @Scripts.Render("~/Content/ThemePublic/Libraries/jsJQuery")
    @RenderSection("PageSpecificCSS", required: false)
</head>

<body class="home-page">
    @Html.Hidden("webbaseurl", Url.Action("action", "controller", new { area = string.Empty }))
    @Html.Hidden("ErrorMessage", (string)ViewBag.ErrorMessage)
    @Html.Hidden("SuccessMessage", (string)ViewBag.SuccessMessage)
    <div class="wrapper main-content">
        @{Html.RenderPartial("_CUWebAppHeader");}
        @* ******CONTENT****** *@
        <div class="content container">
            @RenderBody()
        </div>@*//content*@
    </div>@*//wrapper*@

    <div class="loader" style="display:none;"></div>

    @{Html.RenderPartial("_CUWebAppFooter");}


    <script src="~/Content/ThemeAdmin/Content/Scripts/Libraries/jquery-ui.min.js"></script>
    @Scripts.Render("~/Content/ThemePublic/Libraries/jsMains")
    @RenderSection("PageSpecificJS", required: false)
    <script>
        ///Set Active Tab
        var Controller = '@controllerName';
        var CurrentSection = Controller;
        try {
            if (_CurrentSection) {
                CurrentSection = _CurrentSection;
            }
        }
        catch (ex)
        { }
        function SetActiveSection(Section)
        {
             $(".nav-item").removeClass("active");
            $("#" + Section +"Section").addClass("active");
        }
        SetActiveSection(CurrentSection);
    </script>
</body>
</html>
