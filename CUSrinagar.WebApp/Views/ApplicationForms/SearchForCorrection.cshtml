@using CUSrinagar.Extensions;
@using CUSrinagar.Enums
@using CaptchaMvc.HtmlHelpers

@model CUSrinagar.Models.AttemptCertificate
@{
    ViewBag.Title = "Correction Form - ";
}


<div id="response">
    @if (TempData["response"] != null)
    {
        @Html.Raw(TempData["response"])
    }
</div>
<div class="col-md-1 col-sm-1"></div>
<div class="col-md-10 col-sm-10 ">
    <div class="panel panel-default">
        <div class="panel-body">
            @using (Html.BeginForm("SearchForCorrection", "ApplicationForms", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="page-content">
                    <div class="panel-body">
                        <table style="width:100%">
                            <tbody>
                                <tr>
                                    <td align="center">
                                        <font size="6">
                                            <b>
                                                <span style="font-family:Arial;font-size:medium">
                                                    Application Form for Correction in Name/Parentage/Sub-Caste/DOB
                                                </span>
                                            </b>
                                        </font>
                                        <br />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <br />
                        <div class="row">
                            <div class="col-sm-8">
                                <span> @Html.ValidationMessage("CusRegistrationNo", new { @class = "red" })@Html.ValidationMessageFor(model => model.personalInformationCompact.Student_ID, "", new { @class = "red" })</span>
                            </div>
                            <div class="col-sm-8">
                                <div class="form-group col-sm-8">
                                    <label class="col-sm-8 control-label no-padding-right">
                                        <span class="red bigger-110">*</span>CUS Registration Number
                                    </label>
                                    <div class="col-sm-4">
                                        @Html.TextBoxFor(model => model.personalInformationCompact.CUSRegistrationNo, new { @class = "", @required = "required" })@Html.ValidationMessageFor(model => model.personalInformationCompact.CUSRegistrationNo, "", new { @class = "label label-sm label-danger arrowed-in-right arrowed" })
                                    </div>
                                </div>
                                <div class="form-group col-sm-8">
                                    <label class="col-sm-8 control-label no-padding-right">
                                        <span class="red bigger-110"> *</span>DOB
                                    </label>
                                    <div class="col-sm-4">
                                        @Html.TextBoxFor(model => model.personalInformationCompact.DOB, new { @class = "datetime", @type = "date", @required = "required", maxlength = "10" })@Html.ValidationMessageFor(model => model.personalInformationCompact.DOB, "", new { @class = "label label-sm label-danger arrowed-in-right arrowed" })
                                    </div>
                                </div>
                                <div class="form-group col-sm-8">
                                    <label class="col-sm-8 control-label no-padding-right">
                                        <span class="red bigger-110">*</span>Programme
                                    </label>
                                    <div class="col-sm-3">
                                        @Html.DropDownListFor(model => model.personalInformationCompact.PrintProgramme, (IEnumerable<SelectListItem>)ViewBag.PrintProgrammeList, "", new { @Style = "width:170px", @required = "required" })@Html.ValidationMessageFor(model => model.personalInformationCompact.PrintProgramme, "", new { @class = "label label-sm label-danger arrowed-in-right arrowed" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-sm-9">
                                <div class="clear bold text-center">
                                    @Html.Captcha("", "Enter Verification Code", 4, " Required", true)
                                </div>
                            </div>
                            <div class="form-group col-sm-8">
                                <div class="col-sm-6"></div>
                                <div class="col-sm-6">
                                    <button id="SearchDetail" class="btn btn-theme" value="Search" type="submit" style="color:white !important;font-size:18px">Proceed to Form</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .width100 {
        width: 100% !important;
    }

    .page-header h1 {
        margin: 28px;
    }

    .panel {
        background-color: #f5f5f5 !important;
    }

    .red {
        color: red !important;
    }

    .space-10 {
        margin-top: 28px;
    }
</style>
@section PageSpecificJS{
    <script src=@Url.Content("~/Content/ThemePublic/Libraries/disableBack.js")></script>
}

