
<style>
    .required {
        color: black;
    }
</style>

<div class="page-wrapper pager-table-text">
    <div class="page-content">
        <div class="row page-row">
            <div class="content-wrapper col-md-10 col-sm-8 jsSingleContent"></div>
            <div class="col-md-12 jsTableContent">
                <div class="panel panel-primary js-pager-table">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Combination 
                            <small>
                                <i class="ace-icon fa fa-angle-double-right"></i>
                                 List of Combinations
                            </small>
                            <span class="clickable filter-btn pull-right" data-toggle="tooltip" title="Toggle table filter" data-container="body">
                                <a href="#"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;Search</a>
                            </span>

                        </h3>
                    </div>
                    <div class="panel-body">

                        <div class="col-sm-12 search-box " style="padding-bottom:15px">
                            <div class="col-sm-4 lbl bigger-120 no-padding-right">
                                <span style="color:red">*</span>College<span id="College_IDValidator" class="label label-sm label-danger arrowed-in-right arrowed"></span>
                                <div>
                                    @Html.DropDownList("College_ID", new SelectList(ViewBag.CollegeList, "Value", "Text"),
                                      "--Select--", new { @class = "form-control SearchDDL jsfilterelement required", @data_column = "College_ID", @data_operator = "EqualTo" })
                                </div>
                            </div>
                            <div class="col-sm-3 lbl bigger-120 no-padding-right">
                                <span style="color:red">*</span>Course<span id="Course_IDValidator" class="label label-sm label-danger arrowed-in-right arrowed"></span>
                                <div id="Course">
                                    @Html.DropDownList("Course_ID", new SelectList(ViewBag.CourseList, "Value", "Text"),
                                           "--Select--", new { @class = "form-control   jsfilterelement required", @data_column = "Course_ID", @data_operator = "EqualTo" })
                                </div>
                            </div>

                            <div class="col-sm-2 lbl bigger-120 no-padding-right">
                                <span style="color:red">*</span>Semester<span id="SemesterValidator" class="label label-sm label-danger arrowed-in-right arrowed"></span>
                                <div id="Course">
                                    @Html.DropDownList("Semester", new SelectList(ViewBag.SemesterList, "Value", "Text"),
                                           "--Select--", new { @class = "form-control   jsfilterelement required", @data_column = "Semester", @data_operator = "EqualTo" })
                                </div>
                            </div>

                            <div class="col-sm-2" style="padding-top: 17px;">
                                &nbsp;&nbsp;
                                <span id="jsPrintCombination"><i class="fa fa-print pull-right"></i></span>
                                <button type="button" class="btn btn-theme fa-search-btn pull-right"><i class="fa fa-search"></i>&nbsp;Search</button>

                            </div>
                        </div>
                        <br />
                        <div class="col-sm-12" style="padding-bottom:3px">
                            <div class="col-sm-12 lbl bigger-120 no-padding-right">
                                Search By Combination Code / Subject @Html.TextBox("Quicksearch", "", new { @class = "form-control", @data_action = "table-filter", @data_filters = ".js-table-content", placeholder = "Enter here combination code or subject name" })
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-12">
                        <strong class="quadraText">For updated combinations please visit college(s) website alloted to you.</strong>
                    </div>
                    <div class="js-table-content" data-url=@Url.Action("_CombinationList", "Course",new { area = string.Empty, @CourseCode = ViewBag.CourseCode, @CollegeCode = ViewBag.CollegeCode }) data-DefaultOrderByColumn="CombinationCode">

                    </div>
                    @*@{Html.RenderPartial("_JSPagerTableFooter");}*@
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var _CurrentSection = "Academics";
</script>
@section PageSpecificJS{
    <script>
        var chilDDLPath = '@Url.Action("_GetChildDDL", "Course", new { area = string.Empty })';

    </script>

    <script src="@Url.Content("~/Scripts/JSCourse/GetCombinations.js")"></script>
    <script src="@Url.Content("~/Scripts/JSChosen.js")"></script>

    <script>
        $(document).ready(function () {

            var $pagertable = $(".js-pager-table");

        });

    </script>
}
