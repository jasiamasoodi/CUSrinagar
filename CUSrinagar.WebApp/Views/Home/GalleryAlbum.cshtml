@{
    var imageFiles = (List<string>)ViewBag.ImageFiles;
}
<div class="page-wrapper">
    <div class="page-content">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <h3>
                    @ViewBag.AlbumCaption
                    @*<span class="label label-primary pull-right cursor-ponter jsWindowBack">Back to List</span>*@
                    <a href="@Url.Action("Gallery")" class="label label-primary pull-right">Back to List</a>
                </h3>
            </div>
        </div>
        <hr  class="no-margin-top"/>
        <div class="row page-row">
            @if (imageFiles != null)
            {
                foreach (var image in imageFiles)
                {
                    <a class="prettyphoto col-md-3 col-sm-3 col-xs-6" rel="prettyPhoto[gallery]" title="" href="@image"><img style="min-height:200px" class="img-responsive img-thumbnail" src="@image" alt="" /></a>
                }
            }
        </div><!--//page-row-->
    </div><!--//page-content-->
</div><!--//page-->
<script>
    var _CurrentSection = "Gallery";
</script>